{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Ajouter Médecin!{% endblock %}

{% block body %}
<div class="container">
<h1>Ajouter un médecin</h1>

{{ form_start(form)}}
 <div class="row">
        <div class="col-6">
<div class="form-group">
 {{form_row(form.nom,{'attr':{'class': 'form-control form-control-sm'}})}}
 {{ form_errors(form.nom, {'attr': {'class': 'text-danger'}}) }}
</div>
<div class="form-group">
  {{form_row(form.prenom,{'attr':{'class': 'form-control form-control-sm'}})}}
</div>
<div class="form-group ">
{{form_row(form.adresse,{'attr':{'class': 'form-control form-control-sm'}})}}
</div>
<div class="form-group ">

{{form_row(form.service,{'attr':{'class': 'form-control form-control-sm'}})}}
</div>
<div class="form-group ">
{{form_row(form.telephone,{'attr':{'class': 'form-control form-control'}})}}
</div>

<div class="form-group">
{{form_row(form.specialite,{'attr':{'class': 'custom-select mr-sm-2'}})}}
</div>
</div>
</div>
<div class="form-group">
        <button type="submit" class="btn btn-sm btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>

{{ form_end(form) }}


{% endblock %}
